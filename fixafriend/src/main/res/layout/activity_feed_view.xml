<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="com.han.main.FeedViewActivity">


    <RelativeLayout
        android:id="@+id/layout_feed_banner"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="30dp"
            android:layout_height="27dp"
            android:background="@drawable/app_icon1"
            android:id="@+id/btn_to_inbox"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/margin3"/>
        <TextView
            android:id="@+id/txt_invitation_cnt_inbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="false"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/red_icon"
            android:gravity="center_vertical|center_horizontal"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="invisible"/>


        <TextView
            android:layout_width="@dimen/back_button_size"
            android:layout_height="@dimen/back_button_size"
            android:background="@drawable/ic_back4"
            android:id="@+id/btn_feed_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fix-A-Friend"
            android:textColor="#55dd55"
            android:textSize="@dimen/textsize4"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_feed" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#555555"
            android:id="@+id/textView4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_refresh23"
            android:id="@+id/btn_refresh_feed"
            android:layout_alignTop="@+id/btn_back3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/margin3"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/recycler_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:scrollbars="vertical"-->
        <!--android:layout_below="@+id/layout_feed_banner"-->
        <!--android:layout_above="@+id/feed_menu"/>-->

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_below="@+id/layout_feed_banner"
        android:layout_above="@+id/feed_menu"
        android:layout_gravity="center_horizontal|bottom"
        android:smoothScrollbar="true">

    </com.handmark.pulltorefresh.library.PullToRefreshListView>
    <LinearLayout
        android:id="@+id/feed_menu"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height50"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:layout_weight="0.2">
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/home_white"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/txt_invitation_cnt_feed_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/red_icon"
                android:gravity="center_vertical|center_horizontal"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="invisible" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/feed_search"
                android:layout_width="@dimen/width40"
                android:layout_height="@dimen/height40"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/search_green"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_grey"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/feed_camera"
                android:layout_width="@dimen/height40"
                android:layout_height="@dimen/height40"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/camera_green"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/feed_message"
                android:layout_width="@dimen/height40"
                android:layout_height="@dimen/height40"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/message_green"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/txt_message_cnt_feed_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/red_icon"
                android:gravity="center_vertical|center_horizontal"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="invisible" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/feed_profile"
                android:layout_width="@dimen/width40"
                android:layout_height="@dimen/height40"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/user_green"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/txt_request_cnt_feed_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/red_icon"
                android:gravity="center_vertical|center_horizontal"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="invisible" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
