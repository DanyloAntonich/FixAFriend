<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="com.han.main.CaptureActivity">
    <RelativeLayout
        android:id="@+id/topRl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#000000"
        android:layout_above="@+id/tl_camera">
        <LinearLayout
            android:id="@+id/camera_preview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/title_menu"></LinearLayout>
        <RelativeLayout
            android:id="@+id/title_menu"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/dlg_back_color"
            android:gravity="center" >

            <Button
                android:id="@+id/buttonBack"
                android:layout_width="@dimen/back_button_size"
                android:layout_height="@dimen/back_button_size"
                android:textColor="#ffffff"
                android:background="@drawable/ic_cancel1"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin1" />
            <Button
                android:id="@+id/btn_refresh_video"
                android:layout_width="@dimen/back_button_size"
                android:layout_height="@dimen/back_button_size"
                android:background="@drawable/ic_refresh18"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"/>
            <Button
                android:id="@+id/btn_check"
                android:layout_width="@dimen/back_button_size"
                android:layout_height="@dimen/back_button_size"
                android:background="@drawable/ic_check1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin1"
                android:visibility="invisible"/>


        </RelativeLayout>
    </RelativeLayout>
    <TableLayout
        android:id="@+id/tl_camera"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/dlg_back_color"
        >
        <TableRow
            android:layout_width="fill_parent">
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:visibility="gone"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.25">
                <Button
                    android:id="@+id/btnChangeCamera"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_camera"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_start_background"/>
                <Button
                    android:id="@+id/btn_start_capture_video"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/ic_start_video"
                    android:layout_marginBottom="40dip"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/btn_start_capture"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/ic_start_photo"
                    android:layout_marginBottom="40dip"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.35">
                <Button
                    android:id="@+id/btnLight"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_flash"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:weightSum="2">
            <RelativeLayout
                android:id="@+id/rl_photo"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/height30"
                android:background="@color/dlg_back_color"
                android:layout_weight="1.2">
                <TextView
                    android:id="@+id/tv_to_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:text="Photo"
                    android:textSize="@dimen/textsize3"
                    android:textColor="@color/white"
                    android:background="@color/dlg_back_color"
                    android:layout_weight="0.5"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/tv_to_photo_capture"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/tv_to_photo"
                    android:background="@color/white"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_video"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/height30"
                android:background="@color/dlg_back_color"
                android:layout_weight="0.8">
                <TextView
                    android:id="@+id/tv_to_video"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:background="@color/dlg_back_color"
                    android:text="Video"
                    android:textSize="@dimen/textsize3"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:id="@+id/tv_to_video_capture"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/tv_to_video"
                    android:background="@color/dlg_back_color"/>
            </RelativeLayout>


        </TableRow>
    </TableLayout>

</RelativeLayout>
