<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.han.settings.ChangePasswordActivity"
    android:background="@color/dlg_gray_color">

    <RelativeLayout
        android:id="@+id/layout_change_banner"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#ffffff">
        <Button
            android:layout_width="@dimen/back_button_size"
            android:layout_height="@dimen/back_button_size"
            android:background="@drawable/ic_back4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/margin3"
            android:id="@+id/btn_back5"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_change_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textColor="#55dd55"
            android:textSize="@dimen/textsize4"
            android:textAlignment="center"
            android:layout_alignBottom="@+id/btn_back1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_new_password"
        android:orientation="horizontal"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/layout_change_banner"
        android:layout_marginTop="@dimen/margin5"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_corner"
        android:weightSum="1">


        <EditText
            android:id="@+id/et_old_password"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin1"
            android:layout_marginRight="@dimen/margin1"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Original Password"
            android:textSize="12dp"
            android:layout_weight="1.07"
            android:background="@null"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layou_new_password"
        android:orientation="horizontal"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/layout_new_password"
        android:layout_marginTop="@dimen/margin3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_corner"
        android:weightSum="1">

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin1"
            android:layout_marginRight="@dimen/margin1"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="New Password"
            android:textSize="12dp"
            android:layout_weight="1.07"
            android:background="@null"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_submit_new"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/round_corner_signup"
        android:layout_below="@+id/layou_new_password"
        android:layout_marginTop="@dimen/margin5"
        android:text="Submit"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:id="@+id/ll_change_password_menu"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/ll_profile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/change_password_feed"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/home_green"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/change_password_search"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/search_green"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/change_password_camera"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/camera_green_"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/change_password_message"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/message_green"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:layout_weight="0.2">
            <TextView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/user_white"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
