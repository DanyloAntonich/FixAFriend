<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.han.activities.EditProfileActivity"
    android:background="@color/dlg_menu_list_divide_color">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_profile_menu"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:id="@+id/edit_profile_banner"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView

                android:layout_width="@dimen/back_button_size"
                android:layout_height="@dimen/back_button_size"
                android:background="@drawable/ic_back4"
                android:id="@+id/btn_edit_profile_back"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/margin3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textColor="#55dd55"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView9" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#555555"
                android:id="@+id/textView3"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_check23"
                android:id="@+id/btn_edit_check_profile"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/margin3"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <com.han.widget.CircularImageView
            android:id="@+id/iv_edit_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/edit_profile_banner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin2"
            android:background="@drawable/people_blank_3x"/>
        <LinearLayout
            android:id="@+id/layout_username"
            android:orientation="horizontal"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_below="@+id/iv_edit_profile"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_corner"
            android:weightSum="1">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_user3"
                android:id="@+id/imageView1"

                />
            <EditText
                android:id="@+id/et_edit_username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Username"
                android:textSize="15dp"
                android:layout_toRightOf="@+id/imageView6"
                android:background="@null"
                android:layout_marginLeft="@dimen/margin1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_edit_email"
            android:orientation="horizontal"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_below="@+id/layout_username"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_corner"
            android:weightSum="1">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_email1"
                android:id="@+id/imageView8"

                />
            <EditText
                android:id="@+id/et_edit_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Email Address"
                android:textSize="15dp"
                android:layout_toRightOf="@+id/imageView2"
                android:focusable="false"
                android:editable="false"
                android:inputType="textEmailAddress"
                android:background="@null"
                android:layout_marginLeft="@dimen/margin1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/layout_edit_password"
            android:layout_marginTop="@dimen/margin3"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/tv_aboutme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Me"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/margin2"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round_corner"
                android:backgroundTint="#eeeeee"
                android:id="@+id/layout_edit_aboutme"
                android:weightSum="1">
                <EditText
                    android:id="@+id/et_edit_aboutme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Please Input Something..."
                    android:textSize="15dp"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:layout_marginTop="@dimen/margin3"
                    android:layout_marginLeft="@dimen/margin1"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_below="@+id/layout_edit_email"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_corner"
            android:backgroundTint="#eeeeee"
            android:id="@+id/layout_edit_password"
            android:weightSum="1">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/icon_password"
                android:id="@+id/imageView9"

                />

            <EditText
                android:id="@+id/et_edit_password"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="Password"
                android:textSize="15dp"
                android:layout_weight="1.0"
                android:editable="false"
                android:focusable="false"
                android:background="@null"
                android:layout_marginLeft="@dimen/margin1"/>

        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/edit_profile_menu"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/ll_profile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/edit_profile_feed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/home_green"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/txt_invitation_cnt_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/red_icon"
                android:gravity="center_vertical|center_horizontal"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="invisible" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/edit_profile_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/search_green"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_grey"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/edit_profile_camera"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/camera_green"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/edit_profile_message"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/message_green"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/txt_message_cnt_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/red_icon"
                android:gravity="center_vertical|center_horizontal"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="invisible" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:layout_weight="0.2">
            <TextView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/user_white"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/txt_request_cnt_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/red_icon"
                android:gravity="center_vertical|center_horizontal"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="invisible" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
