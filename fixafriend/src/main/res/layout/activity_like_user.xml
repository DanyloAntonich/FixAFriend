<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.han.activities.LikeUserActivity">

    <RelativeLayout
        android:id="@+id/likeuser_layout_banner"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#ffffff">
        <TextView
            android:layout_width="@dimen/back_button_size"
            android:layout_height="@dimen/back_button_size"
            android:background="@drawable/ic_back4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/margin3"
            android:id="@+id/btn_likeusers_back"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_liked_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liked Users"
            android:textColor="#55dd55"
            android:textSize="@dimen/textsize4"
            android:textAlignment="center"
            android:layout_alignBottom="@+id/btn_likeusers_back"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/lv_like_user"
        android:layout_below="@+id/likeuser_layout_banner"
        android:layout_above="@+id/likeuser_menu">
    </com.handmark.pulltorefresh.library.PullToRefreshListView>
    <LinearLayout
        android:id="@+id/likeuser_menu"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height50"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:layout_weight="0.2">
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/home_white"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/txt_invitation_cnt_likeuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/red_icon"
                android:gravity="center_vertical|center_horizontal"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="invisible" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/likeuser_search"
                android:layout_width="@dimen/width40"
                android:layout_height="@dimen/height40"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/search_green"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_grey"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/likeuser_camera"
                android:layout_width="@dimen/height40"
                android:layout_height="@dimen/height40"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/camera_green"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/likeuser_message"
                android:layout_width="@dimen/height40"
                android:layout_height="@dimen/height40"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/message_green"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/txt_message_cnt_likeuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/red_icon"
                android:gravity="center_vertical|center_horizontal"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="invisible" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/likeuser_profile"
                android:layout_width="@dimen/width40"
                android:layout_height="@dimen/height40"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/user_green"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/txt_request_cnt_likeuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/red_icon"
                android:gravity="center_vertical|center_horizontal"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="invisible" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
