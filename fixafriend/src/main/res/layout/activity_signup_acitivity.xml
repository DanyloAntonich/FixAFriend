<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#565555">

    <RelativeLayout
        android:id="@+id/layout_banner"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#ffffff">
        <TextView
            android:layout_width="@dimen/back_button_size"
            android:layout_height="@dimen/back_button_size"
            android:background="@drawable/ic_back4"
            android:layout_marginLeft="@dimen/margin3"
            android:id="@+id/btn_back1"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_signup_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New Account"
            android:textColor="#55dd55"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_alignBottom="@+id/btn_back1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_fullname"
        android:orientation="horizontal"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/layout_banner"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_corner"
        android:weightSum="1"
        android:layout_marginLeft="@dimen/margin6">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_user3"
            android:id="@+id/imageView1"

            />
        <EditText
            android:id="@+id/et_fullname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Full Name"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/imageView1"
            android:background="@null"
            android:layout_marginLeft="@dimen/margin1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_email"
        android:orientation="horizontal"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/layout_fullname"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_corner"
        android:weightSum="1"
        android:layout_marginLeft="@dimen/margin6"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_email1"
            android:id="@+id/imageView2"

            />
        <EditText
            android:id="@+id/et_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Email Address"
            android:textSize="15dp"
            android:inputType="textEmailAddress"
            android:layout_toRightOf="@+id/imageView2"
            android:background="@null"
            android:layout_marginLeft="@dimen/margin1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/layout_email"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_corner"
        android:id="@+id/layout_password"
        android:weightSum="1"
        android:layout_marginLeft="@dimen/margin6"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_password"
            android:id="@+id/imageView3"

            />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Password"
            android:textSize="15dp"
            android:layout_weight="1.07"
            android:background="@null"
            android:layout_marginLeft="@dimen/margin1"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_confirm_password"
        android:orientation="horizontal"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/layout_password"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_corner"
        android:weightSum="1"
        android:layout_marginLeft="@dimen/margin6"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_password"
            android:id="@+id/imageView4"

            />

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Confirm Password"
            android:textSize="15dp"
            android:layout_weight="1.07"
            android:background="@null"
            android:layout_marginLeft="@dimen/margin1"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_register"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/round_corner_signup"
        android:layout_below="@+id/layout_confirm_password"
        android:layout_marginTop="25dp"
        android:text="Register"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin6"
        />

    <TextView
        android:id="@+id/tv_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By registering, You agree our Privacy Policy."
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/btn_register"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
