<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.han.activities.InboxActivity">
    <RelativeLayout
        android:id="@+id/layout_inbox_banner"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="@dimen/back_button_size"
            android:layout_height="@dimen/back_button_size"
            android:background="@drawable/ic_back4"
            android:id="@+id/btn_to_feed"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/margin3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inbox"
            android:textColor="#55dd55"
            android:textSize="@dimen/textsize4"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_inbox_title" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#555555"
            android:id="@+id/textView4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_refresh23"
            android:id="@+id/btn_refresh_inbox"
            android:layout_alignTop="@+id/btn_back3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/margin3"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/inbox_list"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_inbox_banner"
        android:layout_above="@+id/inbox_menu"
        android:fitsSystemWindows="true"
        />
    <TextView
        android:id="@+id/tv_inbox_alert"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="You have not received any photo/videos to edit!"
        android:textSize="@dimen/textsize3"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin4"
        android:layout_marginLeft="@dimen/margin4"
        android:visibility="gone"/>
    <!--<android.support.v4.widget.SwipeRefreshLayout-->
        <!--android:id="@+id/swipeRefreshLayout_inbox"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!-->-->
   <!-- -->
    <!--</android.support.v4.widget.SwipeRefreshLayout>-->
    <LinearLayout
        android:id="@+id/inbox_menu"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:layout_weight="0.2">
            <TextView
                android:layout_width="@dimen/width40"
                android:layout_height="@dimen/width40"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/home_white"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/badge_inbox_invitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/red_icon"
                android:gravity="center_vertical|center_horizontal"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="invisible"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="0.2">

            <TextView
                android:id="@+id/inbox_search"
                android:layout_width="@dimen/width40"
                android:layout_height="@dimen/width40"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/search_green"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_grey"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/inbox_camera"
                android:layout_width="@dimen/width40"
                android:layout_height="@dimen/width40"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/camera_green"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/inbox_message"
                android:layout_width="@dimen/width40"
                android:layout_height="@dimen/width40"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/message_green"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/badge_inbox_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/red_icon"
                android:gravity="center_vertical|center_horizontal"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="invisible"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/inbox_profile"
                android:layout_width="@dimen/width40"
                android:layout_height="@dimen/width40"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/user_green"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/badge_inbox_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/red_icon"
                android:gravity="center_vertical|center_horizontal"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="invisible"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
