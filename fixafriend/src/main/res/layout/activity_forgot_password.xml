<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292929">

    <RelativeLayout
        android:id="@+id/layout_banner"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#ffffff">
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_back4"

            android:layout_marginLeft="@dimen/margin3"
            android:id="@+id/button2"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_forgot_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot a password"
            android:textColor="#55dd55"
            android:textSize="@dimen/textsize4"
            android:textAlignment="center"
            android:layout_alignBottom="@+id/button2"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_email"
        android:orientation="horizontal"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/layout_banner"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_corner"
        android:weightSum="1"
        android:layout_marginLeft="@dimen/margin6">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_email1"
            android:id="@+id/imageView2"

            />
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:hint="Email Address"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/imageView2"
            android:background="@null"
            android:layout_marginLeft="@dimen/margin1"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/round_corner_signup"
        android:layout_below="@+id/layout_email"
        android:layout_marginTop="40dp"
        android:text="Submit"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin6" />


</RelativeLayout>
