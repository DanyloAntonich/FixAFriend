<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/relativeLayout4"
        android:background="@color/main_background">

        <ImageView
            android:id="@+id/iv_user_inbox"
            android:layout_width="45dp"
            android:layout_height="45dp"

            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin2"/>

        <TextView
            android:id="@+id/tv_inbox_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="@dimen/textsize2"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_user_inbox"
            android:layout_toEndOf="@+id/iv_user_inbox"
            android:layout_marginLeft="@dimen/margin1"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/icon_time"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/tv_time_inbox"
            android:id="@+id/imageView6"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_time_inbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/margin1"
            />

    </RelativeLayout>
</LinearLayout>
