<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.han.settings.SettingActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/dlg_gray_color"
        android:layout_above="@+id/setting_menu"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:id="@+id/setting_banner"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="#ffffff">
            <TextView
                android:layout_width="@dimen/back_button_size"
                android:layout_height="@dimen/back_button_size"
                android:background="@drawable/ic_back4"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="@dimen/margin3"
                android:id="@+id/btn_setting_back"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_setting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setting"
                android:textColor="#55dd55"
                android:textSize="@dimen/textsize4"
                android:textAlignment="center"
                android:layout_alignBottom="@+id/btn_setting_back"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:id="@+id/ll_suggestion"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/margin3">
                    <TextView
                        android:id="@+id/tv_setting_suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suggestion/Feedback"
                        android:textSize="@dimen/textsize2"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin3" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_navigate_next_black_24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin2"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ll_shareapp"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/margin1">
                    <TextView
                        android:id="@+id/tv_setting_shareapp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share App"
                        android:textSize="@dimen/textsize2"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin3" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_navigate_next_black_24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin2"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ll_policy"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/margin1">
                    <TextView
                        android:id="@+id/tv_setting_policy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Privacy Policy"
                        android:textSize="@dimen/textsize2"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin3" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_navigate_next_black_24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin2"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ll_rateus"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/margin1">
                    <TextView
                        android:id="@+id/tv_setting_rateus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate Us"
                        android:textSize="@dimen/textsize2"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin2" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_navigate_next_black_24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin2"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ll_change_password"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/margin5">
                    <TextView
                        android:id="@+id/tv_setting_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Password"
                        android:textSize="@dimen/textsize2"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin3" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_navigate_next_black_24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin2"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ll_remove_file"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/margin1">
                    <TextView
                        android:id="@+id/tv_setting_removefile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remove Temporary Files"
                        android:textSize="@dimen/textsize2"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin3" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_navigate_next_black_24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin2"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ll_logout"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/margin5">
                    <TextView
                        android:id="@+id/tv_setting_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textsize2"
                        android:text="Logout"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin3" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_navigate_next_black_24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin2"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_menu"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/ll_setting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/setting_feed"
                android:layout_width="@dimen/width40"
                android:layout_height="@dimen/width40"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/home_green"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/setting_search"
                android:layout_width="@dimen/width40"
                android:layout_height="@dimen/width40"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/search_green"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_grey"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/setting_camera"
                android:layout_width="@dimen/width40"
                android:layout_height="@dimen/width40"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/camera_green"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/setting_message"
                android:layout_width="@dimen/width40"
                android:layout_height="@dimen/width40"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/message_green"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:layout_weight="0.2">
            <TextView

                android:layout_width="@dimen/width40"
                android:layout_height="@dimen/width40"
                android:layout_margin="@dimen/margin0"
                android:background="@drawable/user_white"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
