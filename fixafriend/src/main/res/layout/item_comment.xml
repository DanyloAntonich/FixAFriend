<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="99dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/civ_comment"
            android:layout_marginLeft="@dimen/margin2"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="20dp"
            android:id="@+id/tv_username_comment"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/civ_comment"
            android:layout_toEndOf="@+id/civ_comment"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="15dp"
            android:layout_below="@+id/tv_username_comment"

            android:id="@+id/tv_comment_message"
            android:layout_alignBottom="@+id/civ_comment"
            android:layout_alignLeft="@+id/tv_username_comment"
            android:layout_alignStart="@+id/tv_username_comment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="@dimen/textsize3"
            android:id="@+id/tv_comment_time"
            android:layout_alignBottom="@+id/tv_username_comment"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/margin2"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/iv_clock"
            android:layout_alignBottom="@+id/tv_username_comment"
            android:layout_toLeftOf="@+id/tv_comment_time"
            android:layout_toStartOf="@+id/tv_comment_time"
            android:background="@drawable/icon_time"/>

    </RelativeLayout>
</LinearLayout>
