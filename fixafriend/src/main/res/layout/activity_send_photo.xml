<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="com.han.postactivities.SendPhotoActivity">
    <RelativeLayout
        android:id="@+id/layout_banner_sendphoto"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/black">

        <Button

            android:layout_width="@dimen/back_button_size"
            android:layout_height="@dimen/back_button_size"
            android:background="@drawable/ic_back8"
            android:id="@+id/btn_back_sendphoto"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/margin3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Photo"
            android:textColor="@color/white_color"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_send_photo" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#555555"
            android:id="@+id/textView3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_send4"
            android:id="@+id/btn_send_photo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/margin3"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/layout_banner_sendphoto"
        android:background="@color/dlg_back_color">
        <RelativeLayout
            android:id="@+id/rl_time_limit"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/round_corner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin6">
            <TextView
                android:id="@+id/tv_timelimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Limit"
                android:textColor="@color/dlg_back_color"
                android:textSize="@dimen/textsize3"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_time_limit"
            android:layout_marginTop="@dimen/margin4">

            <VideoView
                android:id="@+id/vv_send_video"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/iv_send_photo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:id="@+id/iv_isvideo14"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/play_video"
                android:visibility="gone"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
