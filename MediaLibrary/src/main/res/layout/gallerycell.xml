<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gallery_cell"
    android:orientation="vertical" android:layout_width="50dp"
    android:layout_height="50dp"
    android:paddingTop="1dp"
    android:layout_centerHorizontal="true">
    <ImageView android:id="@+id/gallery_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@color/transparent_perfect"/>

    <TextView android:id="@+id/gallery_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/white_color"
        android:text="Text"
        android:textSize="@dimen/padding_10dp"
        android:background="@color/transparent_perfect"/>
</LinearLayout>